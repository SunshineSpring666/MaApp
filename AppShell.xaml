<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MaApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MaApp"
    FlyoutBehavior="Locked"
    x:Name="this"
    BindingContext="{x:Reference this}"
    Title="MaApp">

    <ShellContent Title="LoginPage" ContentTemplate="{DataTemplate local:LoginPage}" FlyoutItemIsVisible="False"/>
    <ShellContent Title="MainPage" ContentTemplate="{DataTemplate local:MainPage}"/>

</Shell>
