<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaApp.LoginPage"
             Shell.PresentationMode="Modal"
             Shell.FlyoutBehavior="Disabled"
             x:Name="this"
             BindingContext="{x:Reference this}"
             Title="LoginPage">
    
    <VerticalStackLayout>
        <Label Text="Now the NavigationStack should be depth 1 with page instance LoginPage(). However the NavigationStack has one item which is null" Margin="10"/>
        <Button Text="Log In and remove this page" Clicked="LogInAndRemoveLoginPageFromStackClicked" Margin="10"/>
        <Button Text="Log In and push main page on stack" Clicked="LogInByPushingAnotherPageOntoStackClicked" Margin="10"/>
    </VerticalStackLayout>
    
</ContentPage>